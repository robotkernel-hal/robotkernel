PTVERSION           = 2
NAME                = robotkernel
VERSION             = 3.1.4
DESCRIPTION         = the robotkernel device driver framework
MAINTAINER          = Robert Burger <robert.burger@dlr.de>
DOCUMENTATION       = https://rmintra01.robotic.dlr.de/wiki/Robotkernel
DEPENDS             = software.links_and_nodes==0.6.3, software.yaml-cpp==0.3.0
C++_INCLUDE_PATHS   = ${PKGROOT}/include/, ${PKGROOT}/include/${ARCH}/
C++_LIB_PATHS       = ${PKGROOT}/lib/${ARCH}
C++_LIBS            = 
ARCHS               = sled11-x86-gcc4.x, sled11-x86_64-gcc4.x, angstrom-armv7-gcc4.7, vxworks6.7-x86-gcc4.x, vxworks6.8-x86-gcc4.x, vxworks6.9-x86-gcc4.x, vxworks6.9.3-x86-gcc4.x, vxworks6.9.4-x86-gcc4.x, qnx6.3-x86-gcc3.3, qnx6.5-x86-gcc4.x, qnx6.5-x86-gcc4.x-gpp
SUPPORTED_LANGUAGES = C++

[install]
include/robotkernel/*.h => include/robotkernel/
build/${ARCH}/include/robotkernel/*.h => include/${ARCH}/robotkernel/
build/${ARCH}/install/bin/ => bin/${ARCH}/
share/ => share/
